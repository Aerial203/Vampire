<%- include("partials/header"); -%>

<div class="container-fluid">
<h1 class="title">Give Your Thaughts About Vampires!</h1>
  <form action="/comment" method="post">
    <div class="form-group">
        <label class="description">Your name</label>
        <input class="form-control" type="text" name="name" placeholder="Full Name" autocomplete="off" required>
    </div>
    <div class="form-group">
        <textarea class="form-control" name="comment" rows="8" cols="60" placeholder="Your Opinion" required></textarea>
    </div>
    <button type="submit" class="btn btn-lg btn-secondary" name="button">Post</button>
  </form>
</div>
<%-include("partials/footer"); -%>
